<% provide(:title, @article.title) %>
<% provide(:description, @article.short_description) %>

<div class="section news" id="news">
  <div class="container">
    <div class="arrow 05">
      <%= image_tag("arrow/arrow_01.png", alt: "arrow_01") %>
    </div>
    <div class="subheader">
      <div class="subheader-icon"></div>
      <div class="subheader-text">
        <%=t :news_title_1 %> <span><%= @article.title %></span>
      </div>
      <div class="subheader-separator"></div>
    </div>
    <div class="m-top-50">
    <div class="test"><%= @article.text.html_safe %></div>
    <% if signed_in? && current_user.admin? && !current_user?(@users) %>
    <%= link_to 'Back', articles_path %>
    | <%= link_to 'Edit', edit_article_path(@article) %>
    <% end %>
    <div class="clear"></div>
  </div>
</div>
</div>