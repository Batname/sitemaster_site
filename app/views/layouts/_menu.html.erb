<div class="toggler-menu" id="toggler-menu">
  <div class="navigation-lang">
    <% if I18n.locale == :en %>
        <%= image_tag("navigate-lang.png", alt: "navigate_img") %>
    <% elsif I18n.locale == :ru %>
        <%= image_tag("navigate-lang_ru.png", alt: "navigate_img") %>
    <% end %>

    <ul>
      <li>
        <%= link_to('?locale=en', data: { no_turbolink: true }, class: 'nav-active rounded') do %><span>English</span><% end %>
        <%= link_to('?locale=ru', data: { no_turbolink: true }, class: 'nav-active rounded') do %><span>Русский</span><% end %>
      </li>
    </ul>
  </div>

  <div class="navigation-head">
    <% if I18n.locale == :en %>
        <%= image_tag("navigate.png", alt: "navigate_img") %>
    <% elsif I18n.locale == :ru %>
        <%= image_tag("navigate_ru.png", alt: "navigate_img") %>
    <% end %>
    <ul>
      <li>
        <%= link_to "#{t :menu_1}", root_path, class: "rounded", data: {no_turbolink: true} %>
      </li>
      <li>
        <%= link_to "#{t :menu_3}", '/#services', class: "rounded", data: {no_turbolink: true} %>
      </li>
      <li>
        <%= link_to "#{t :menu_4}", '/#showcase', class: "rounded", data: {no_turbolink: true} %>
      </li>
      <li>
        <%= link_to "#{t :menu_7}", '/#news', class: "rounded", data: {no_turbolink: true} %>
      </li>
      <% if signed_in? %>
          <br>
          <br>
          <li><%= link_to "Users", users_path, class: "rounded", data: {no_turbolink: true} %></li>
          <li><%= link_to "Profile", current_user, class: "rounded", data: {no_turbolink: true} %></li>
          <li><%= link_to "Settings", edit_user_path(current_user), class: "rounded", data: {no_turbolink: true} %></li>
          <li><%= link_to "Sign out", signout_path, method: "delete", class: "rounded", data: {no_turbolink: true} %></li>
              <br>
              <br>
              <li><%= link_to "Edit Services", edit_services_path, class: "rounded", data: {no_turbolink: true} %></li>
              <li><%= link_to "Edit Projects", edit_projects_path, class: "rounded", data: {no_turbolink: true} %></li>
              <li><%= link_to "Edit News", edit_news_path, class: "rounded", data: {no_turbolink: true} %></li>
      <% end %>
    </ul>
  </div>
</div>
<div id="clouse-menu-button" class="ui-state-default" style="display: none"></div>
<div id="open-menu-button" class="ui-state-default-op" style="display: none"></div>
