<% provide(:title, @service.title) %>
<% provide(:description, truncate(@service.short_description.html_safe, length: 250)) %>

    <div class="subheader">
      <div class="subheader-icon"></div>
      <div class="subheader-text">
        <%=t :services_title_1 %> <span><%= @service.title %></span>
      </div>
      <div class="subheader-separator"></div>
    </div>
    <div class="m-top-50">
      <div class="test"><%= @service.text.html_safe %></div>
      <%= link_to "#{t :main_content_2}", root_path, data: {no_turbolink: true} %>
      <% if signed_in? && current_user.admin? && !current_user?(@users) %>
          | <%= link_to "#{t :service_content_2}", services_path, data: {no_turbolink: true} %>
          | <%= link_to "#{t :service_content_3}", edit_service_path(@service), data: {no_turbolink: true} %>
      <% end %>
      <div class="clear"></div>
    </div>


