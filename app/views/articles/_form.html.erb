<%= form_for @article do |f| %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@article.errors.count, "error") %> prohibited
            this article from being saved:</h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.label :short_description %><br>
      <%= f.text_area :short_description %>
    </p>

    <p>
      <%= f.label(:permalink) %>
      <%= f.text_field(:permalink) %>
    </p>

    <p>
      <%= f.label(:position) %>
      <%= f.select(:position, 1..@article_count) %>
    </p>
    <p>
      <%= f.label(:visible) %>
      <%= f.check_box(:visible) %>
    </p>

    <p>
      <%= f.submit "Submit" , class: "submit-btn rounded", style: "float: left", id: "submit-mail", data: {:'disable-with' => "#{t :contact_content_15}"} %>
    </p>
<% end %>