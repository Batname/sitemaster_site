<% provide(:title, 'Edit Projects') %>



<div class="section showcase" id="showcase">
  <div class="container">
    <div class="arrow 03">
      <%= image_tag("arrow/arrow_01.png", alt: "arrow_01") %>
    </div>
    <div class="subheader">
      <div class="subheader-icon"></div>
      <div class="subheader-text">
        Edit Projects  <span></span>

      </div>
      <div class="subheader-separator"></div>
      <div class="m-top-50">
        <%= link_to 'New Projects', new_project_path %>
        <br>
        <br>

        <%= will_paginate %>
        <table class="table">
          <% @projects.each do |project| %>
              <tr>
                <td><%= project.title %></td>
                <td><%= truncate(project.text, length: 150)  %></td>
                <td><%= project.short_description %></td>
                <td><%= project.permalink %></td>
                <td><%= link_to_unless_current("Show", {controller:'projects' , action: 'show', permalink: project.permalink}, class: "", style: "", data: { no_turbolink: true } ) %> <td>
                <td><%= link_to 'Edit', edit_project_path(project) %></td>
                <td><%= link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
        </table>
        <%= will_paginate %>

      </div>
      <div class="clear"></div>
    </div>
  </div>
</div>